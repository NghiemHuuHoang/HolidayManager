@model IEnumerable<HolidayManager.Models.DetailsLeaveTypeVM>

@{
    ViewData["Title"] = "Index";
}

<h2>Leave Type</h2>
<br />
<br />
<p>
    <a asp-action="Create" class="btn btn-success"><i class="far fa-plus-square"></i>Create New</a>
</p>
<table id="myTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning"  asp-route-id="@item.Id"><i class="fas fa-pen-square"></i> Edit</a> |
                    <a asp-action="Details" class="btn btn-success" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i>Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you want DELETE this record?')"><i class="fas fa-trash-alt"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
<script>
    $(document).ready( function () {
    $('#myTable').DataTable();
    } );
</script>
    
}